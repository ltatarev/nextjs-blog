{
  "extends": [
    "@menelaia/react",
    "plugin:@next/next/recommended",
    "plugin:tailwindcss/recommended"
  ],
  "settings": {
    "import/resolver": {
      "jsconfig": {
        "config": "jsconfig.json",
        "extensions": [".js", ".jsx"]
      }
    }
  },
  "plugins": ["tailwindcss"],
  "rules": {
    "react/react-in-jsx-scope": "off",
    "global-require": "off",
    "linebreak-style": "off",
    "max-len": ["error", { "code": 200, "tabWidth": 4 }]
  }
}
