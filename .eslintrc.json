{
  "extends": [
    "@menelaia/react",
    "plugin:@next/next/recommended",
    "plugin:tailwindcss/recommended"
  ],
  "plugins": ["tailwindcss"],
  "rules": {
    "react/react-in-jsx-scope": "off",
    "global-require": "off",
    "linebreak-style": "off",
    "max-len": ["error", { "code": 100, "tabWidth": 4 }]
  }
}
